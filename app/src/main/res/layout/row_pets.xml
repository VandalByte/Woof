<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#87CEEB">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#FFFFFF">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/pet_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#214566"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/pet_name_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Julie"
                android:textColor="#214566"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/pet_id_txt"
            app:layout_constraintTop_toTopOf="@id/pet_id_txt"
            app:layout_constraintBottom_toBottomOf="@id/pet_id_txt"
            app:layout_constraintHorizontal_chainStyle="packed" />

            <TextView
                android:id="@+id/pet_breed_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Indian Spitz"
                android:textColor="#008080"
                app:layout_constraintStart_toStartOf="@id/pet_name_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pet_name_txt" />

            <TextView
                android:id="@+id/pet_age_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="3 yrs"
                android:textColor="#008080"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/pet_id_txt"
                app:layout_constraintTop_toBottomOf="@id/pet_breed_txt" />

            <TextView
                android:id="@+id/pet_gender_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Female"
                android:textColor="#214566"
                app:layout_constraintStart_toEndOf="@id/pet_age_txt"
                app:layout_constraintTop_toTopOf="@id/pet_age_txt"
                app:layout_constraintBottom_toBottomOf="@id/pet_age_txt" />

            <TextView
                android:id="@+id/pet_color_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="White"
                android:textColor="#008080"
                app:layout_constraintStart_toEndOf="@id/pet_gender_txt"
                app:layout_constraintTop_toTopOf="@id/pet_age_txt"
                app:layout_constraintBottom_toBottomOf="@id/pet_age_txt" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
