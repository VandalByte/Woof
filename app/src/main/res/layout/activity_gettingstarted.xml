<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnStartPage"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="27dp"
        android:text="Get Started"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textStartPageList3" />

    <TextView
        android:id="@+id/textStartPageHead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Woof"
        android:textAlignment="textStart"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textStartPageSub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textStartPageSub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Timely Reminders for Your Furry Friend"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/textStartPageList1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textStartPageHead" />

    <TextView
        android:id="@+id/textStartPageList1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="• Set customizable reminders for feeding schedules"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@+id/textStartPageList2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textStartPageSub" />

    <TextView
        android:id="@+id/textStartPageList3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="382dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="• Stay organized with reminders for walks and exercise"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@+id/btnStartPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textStartPageList2" />

    <TextView
        android:id="@+id/textStartPageList2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="• Track medication doses and get alerts"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@+id/textStartPageList3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textStartPageList1" />

</androidx.constraintlayout.widget.ConstraintLayout>